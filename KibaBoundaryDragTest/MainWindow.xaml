<Window x:Class="KibaBoundaryDragTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KibaBoundaryDragTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <DockPanel Name="dpTop" DockPanel.Dock="Top" Height="100" Background="Yellow"></DockPanel>
        <DockPanel Name="dpLeft" DockPanel.Dock="Left" Width="200" Background="Green"  Margin="0,10,10,0"></DockPanel>
        <DockPanel Name="dpRight"   Background="Gray" Margin="0,10,0,0"></DockPanel>
    </DockPanel>
</Window>
